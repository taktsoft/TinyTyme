<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:gravity="center_horizontal">
		<Button android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/btnJSON"
			android:text="Parse Tasks"></Button>
	</LinearLayout>
	<LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:orientation="vertical">
		<DatePicker android:id="@+id/dpDate" android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="0dp"></DatePicker>
		<TimePicker android:id="@+id/tpTime" android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="0dp"></TimePicker>
		<EditText android:layout_width="fill_parent" android:id="@+id/inputTaskName" android:layout_weight="1" android:layout_height="0dp">
			<requestFocus></requestFocus>
		</EditText>
		<Button android:layout_width="wrap_content" android:id="@+id/btnCreate" android:text="Create Tasks" android:layout_weight="1" android:layout_height="0dp"></Button>
	</LinearLayout>
	<TextView android:layout_height="wrap_content" android:id="@+id/txtData"
	android:layout_gravity="center_horizontal" android:layout_width="fill_parent"
	android:text="default text"></TextView>

	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/ScrollView01" android:layout_width="fill_parent"
		android:layout_height="wrap_content">


	</ScrollView>

</LinearLayout>