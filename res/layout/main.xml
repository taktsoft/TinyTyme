<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:paddingLeft="30dip" android:paddingRight="30dip"
	android:paddingTop="0dip"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:orientation="horizontal" android:background="@color/background">
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout1" android:orientation="vertical" android:layout_height="fill_parent">
        <ImageView android:id="@+id/imageView1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/icon_inapp" android:layout_gravity="center_horizontal"></ImageView>
    
    	<EditText android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/inputTaskName">
        <requestFocus></requestFocus>
    	</EditText>
    	<DatePicker android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/dpDate"></DatePicker>
    	<TimePicker android:layout_gravity="center_horizontal" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tpTime"></TimePicker>
       	<Button android:layout_width="wrap_content" android:text="@string/commit_to_tyme" android:layout_height="wrap_content" android:layout_gravity="right" android:id="@+id/btnCreate"></Button>
       	<TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/txtData" android:text="@string/empty"></TextView>

        
    </LinearLayout>
    
</LinearLayout>
